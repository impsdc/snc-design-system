{
  "name": "snc-design-system",
  "version": "0.1.5",
  "private": false,
  "dependencies": {
    "@babel/cli": "^7.16.7",
    "@craco/craco": "^6.3.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "cross-env": "^7.0.3",
    "node-sass": "^6.0.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "react-slick": "^0.28.1",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "cross-env BABEL_ENV=production babel src -d dist && gulp",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "watch:css": "postcss src/styles/tailwind.css -o src/styles/index.css",
    "watch": "chokidar \"./src/**/*.{js,jsx}\" -c \"npm run watch:css\"",
    "dev": "concurrently \"npm run watch\" \"npm run start\"",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "babel": {
    "presets": [
      [
        "react-app",
        {
          "absoluteRuntime": false
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "optionalDependencies": {
    "babel-loader": "8.1.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/node-logger": "^6.4.9",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.4.9",
    "autoprefixer": "^9.8.8",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^6.3.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "^4.3.0",
    "gulp-imagemin": "^7.0.1",
    "gulp-sass": "^5.1.0",
    "gulp-terser": "^2.1.0",
    "gulp-webp": "^4.0.1",
    "postcss": "^8.1.0",
    "postcss-cli": "^9.0.1",
    "sass": "^1.49.7",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.17"
  },
  "description": "It's neccessary to lauch the 2 commands in order to test styling in storybook app.",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:impsdc/snc-design-system.git"
  },
  "author": "impsdc",
  "license": "ISC"
}
